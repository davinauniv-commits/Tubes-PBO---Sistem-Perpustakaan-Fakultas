<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.controller.DashboardController"
            style="-fx-background-color:#0a043c;"
            prefWidth="1200" prefHeight="720"
            minWidth="1000" minHeight="650">

    <!-- ================= SIDEBAR ================= -->
    <left>
        <VBox fx:id="sidebarContainer" prefWidth="260"/>
    </left>

    <!-- ================= CONTENT ================= -->
    <center>
        <VBox spacing="18" style="-fx-padding:28;"
              fillWidth="true"
              BorderPane.alignment="TOP_LEFT">

            <!-- TOP BAR -->
            <HBox alignment="CENTER_LEFT" spacing="12" VBox.vgrow="NEVER">
                <Label text="DASHBOARD"
                       style="-fx-text-fill:white; -fx-font-size:30; -fx-font-weight:bold;"/>
            </HBox>

            <!-- ===== CARDS ===== -->
            <HBox spacing="18" VBox.vgrow="NEVER">

                <!-- CARD: TOTAL DENDA BELUM DIBAYAR (CLICKABLE) -->
                <Button onAction="#openDendaBelumBayar"
                        prefWidth="220"
                        style="-fx-background-color:white; -fx-background-radius:10; -fx-padding:18;"
                        mnemonicParsing="false">
                    <graphic>
                        <VBox spacing="6">
                            <Label text="Total Denda"
                                   style="-fx-font-size:14; -fx-font-weight:bold;"/>

                            <Label text="Belum Dibayar"
                                   style="-fx-font-size:12; -fx-text-fill:#cc0000;"/>

                            <Label fx:id="lblTotalDenda"
                                   text="..."
                                   style="-fx-font-size:26; -fx-font-weight:bold;"/>
                        </VBox>
                    </graphic>
                </Button>

                <!-- CARD: ANGGOTA -->
                <VBox prefWidth="220" style="-fx-background-color:white; -fx-background-radius:10; -fx-padding:18;">
                    <Label text="Anggota Perpustakaan" style="-fx-font-size:14; -fx-font-weight:bold;"/>
                    <Label fx:id="lblAnggota" text="..." style="-fx-font-size:34; -fx-font-weight:bold;"/>
                </VBox>

                <!-- CARD: DIPINJAM -->
                <VBox prefWidth="220" style="-fx-background-color:white; -fx-background-radius:10; -fx-padding:18;">
                    <Label text="Buku Dipinjam" style="-fx-font-size:14; -fx-font-weight:bold;"/>
                    <Label fx:id="lblDipinjam" text="..." style="-fx-font-size:34; -fx-font-weight:bold;"/>
                </VBox>

            </HBox>

            <!-- ===== ADMIN HEADER BOX ===== -->
            <VBox style="-fx-background-color:white; -fx-background-radius:10; -fx-padding:18;"
                  VBox.vgrow="NEVER">
                <Label fx:id="lblNamaAdmin" text="NAMA ADMIN"
                       style="-fx-font-size:22; -fx-font-weight:bold;"/>
                <Label fx:id="lblKategoriAdmin" text="Kategori Admin"
                       style="-fx-font-size:13; -fx-text-fill:#555;"/>
            </VBox>

            <!-- ===== INFORMASI PRIBADI ===== -->
            <!-- VBox ini dibuat bisa melebar & tetap rapi saat window besar -->
            <VBox style="-fx-background-color:white; -fx-background-radius:10;"
                  maxWidth="Infinity"
                  VBox.vgrow="ALWAYS">
                <Label text="Informasi Pribadi"
                       style="-fx-font-size:18; -fx-font-weight:bold; -fx-padding:14 18 10 18;"/>
                <Separator/>

                <GridPane hgap="12" vgap="10" style="-fx-padding:14 18 18 18;">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Nama Lengkap"/>
                    <Label fx:id="lblInfoNama" GridPane.columnIndex="1" text="-"/>

                    <Label text="Username" GridPane.rowIndex="1"/>
                    <Label fx:id="lblInfoUsername" GridPane.rowIndex="1" GridPane.columnIndex="1" text="-"/>

                    <Label text="Email" GridPane.rowIndex="2"/>
                    <Label fx:id="lblInfoEmail" GridPane.rowIndex="2" GridPane.columnIndex="1" text="-"/>

                    <Label text="No Telepon" GridPane.rowIndex="3"/>
                    <Label fx:id="lblInfoTelp" GridPane.rowIndex="3" GridPane.columnIndex="1" text="-"/>
                </GridPane>
            </VBox>

            <!-- Opsional status kecil -->
            <Label fx:id="lblStatus" text=""
                   style="-fx-text-fill:#ffdddd; -fx-font-size:12;"
                   VBox.vgrow="NEVER"/>
        </VBox>
    </center>

</BorderPane>